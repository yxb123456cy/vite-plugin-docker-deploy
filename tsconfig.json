{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "esnext",
      "DOM"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/**/*.ts",
    "./docs/.vitepress/**/*.ts",
    "./docs/**/**/*.vue",
    "./types/*.ts",
    "playground/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
